    <div class="container">
        <div class="row">
            <figure class="text-center">
                <blockquote class="blockquote">
                    <h1>{{ 'New Platform'|trans }}</h1>
                    <a href="{{ path('app_websites_index') }}" class="btn btn-warning">{{ 'back to list'|trans }}</a>
