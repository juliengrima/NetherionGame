{% extends 'layout.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="relative-container">
    <div class="container">
        <div class="col"> 
            <figure class="text-center">
                <blockquote class="blockquote">
                    <h1>{{ 'Login'|trans }}</h1>
                    <a href="{{ path('app_images_index') }}" class="btn btn-warning">{{ 'back to list'|trans }}</a>
                </blockquote>
            </figure>
        </div>

        <div class="d-flex justify-content-center align-items-center">

            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <table class="">
                    <thead>
                        <tr>
                            <th>
                                <label for="username">{{'Username'|trans}}</label>
                            </th>
                            <th>
                                <label for="password">{{'Password'|trans}}</label>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                            <input type="text" id="username" name="username" value="{{ last_username }}" <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="username" required autofocus>
                            </td>
                            <td>
                                    <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                            </td>
                        </tr>
                    </tbody>
                </table>
                
                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}">

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <input type="checkbox" name="_remember_me" id="_remember_me">
                        <label for="_remember_me">Remember me</label>
                    </div>
                #}

                <button class="btn btn-lg btn-primary" type="submit">{{ 'Sign in'|trans }}</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
