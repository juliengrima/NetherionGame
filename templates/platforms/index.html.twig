{% extends 'base.html.twig' %}

{% block title %}Platforms index{% endblock %}

{% block body %}
    <h1>Platforms index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for platform in platforms %}
            <tr>
                <td>{{ platform.id }}</td>
                <td>{{ platform.name }}</td>
                <td>
                    <a href="{{ path('app_platforms_show', {'id': platform.id}) }}">show</a>
                    <a href="{{ path('app_platforms_edit', {'id': platform.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_platforms_new') }}">Create new</a>
{% endblock %}
