{% extends 'base.html.twig' %}

{% block title %}PlateForms{% endblock %}

{% block body %}
    <h1>PlateForms</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ plate_form.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ plate_form.name }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ plate_form.link }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_plate_forms_index') }}">back to list</a>

    <a href="{{ path('app_plate_forms_edit', {'id': plate_form.id}) }}">edit</a>
    {% if is_granted('ROLE_SUPER_ADMIN') %}
    {{ include('plate_forms/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
