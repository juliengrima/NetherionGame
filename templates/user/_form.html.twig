{{ form_start(form) }}
    <div class="col">
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="_roles[]" id="roles" value="ROLE_USER">
            <label class="form-check-label" for="roles">{{'User'|trans}}</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="_roles[]" id="roles" value="ROLE_ADMIN">
            <label class="form-check-label" for="roles">{{'Administrator'|trans}}</label>
        </div>
        {% if is_granted('ROLE_SUPER_ADMIN') %}
            <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="_roles[]" id="roles" value="ROLE_SUPER_ADMIN">
            <label class="form-check-label" for="roles">{{'The King'|trans}}</label>
        </div>
        {% else %}
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="_roles[]" id="roles" value="ROLE_SUPER_ADMIN" disabled>
            <label class="form-check-label" for="roles">{{'The King'|trans}}</label>
        </div>
        {% endif %}
    </div>
    <table class="form-table">
        <thead>
            <tr>
                <th>{{ form_label(form.username) }}</th>
                <td>{{ form_widget(form.username) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(form.password) }}</th>
                <td>{{ form_widget(form.password) }}</td>
            </tr> 
        </thead>
    </table>
    <div class="text-center">
        <button type="submit" class="btn btn-success">{{'Register'|trans}}</button>
    </div> 






    {# {{ form_widget(form) }}
    <button class="btn">{{ button_label|default('Save') }}</button> #}
{{ form_end(form) }}
