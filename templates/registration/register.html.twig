{% extends 'layout.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
 <div class="relative-container">
        <div class="container">
            <div class="col"> 
                <figure class="text-center">
                    <blockquote class="blockquote">
                        <h1>{{ 'Register'|trans }}</h1>
                        <a href="{{ path('app_user_index') }}" class="btn btn-warning">{{ 'back to list'|trans }}</a>
                    </blockquote>
                </figure>
            </div>

            <div class="d-flex justify-content-center align-items-center bottom-space">
                {{ form_errors(registrationForm) }}

                {{ form_start(registrationForm) }}

                    {# {{ form_row(registrationForm.username) }}
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Password'
                    }) }}
                    {{ form_row(registrationForm.agreeTerms) }} #}

                    {# <button type="submit" class="btn">Register</button> #}

                    <div class="col">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="_roles[]" id="roles" value="ROLE_USER">
                            <label class="form-check-label" for="roles">{{'User'|trans}}</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="_roles[]" id="roles" value="ROLE_ADMIN">
                            <label class="form-check-label" for="roles">{{'Administrator'|trans}}</label>
                        </div>
                        {% if is_granted('ROLE_SUPER_ADMIN') %}
                            <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="_roles[]" id="roles" value="ROLE_SUPER_ADMIN">
                            <label class="form-check-label" for="roles">{{'The King'|trans}}</label>
                        </div>
                        {% else %}
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="_roles[]" id="roles" value="ROLE_SUPER_ADMIN" disabled>
                            <label class="form-check-label" for="roles">{{'The King'|trans}}</label>
                        </div>
                        {% endif %}
                    </div>
                    <table class="form-table">
                        <thead>
                            <tr>
                                <th>{{ form_label(registrationForm.username) }}</th>
                                <td>{{ form_widget(registrationForm.username) }}</td>
                            </tr>
                            <tr>
                                {# <th>{{ form_label(registrationForm.plainPassword, {label: 'Password'}) }}</th> #}
                                <th>{{ form_label(registrationForm.plainPassword) }}</th>
                                <td>{{ form_widget(registrationForm.plainPassword) }}</td>
                            </tr>
                            <tr>
                                <th>
                                    {# {{ form_label(registrationForm.agreeTerms) }} #}
                                    {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'form-check-label'}}) }}
                                </th>
                                {# <td>{{ form_widget(registrationForm.agreeTerms) }}</td> #}
                                <td class="text-center">
                                    <div class="form-check box-center">
                                        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                                       
                                    </div>
                                </td>
                                {# <td>
                                    <a href="#">
                                    <span></span><img src="{{asset('images/icons/exclamation.svg')}}" alt="icons" class="icons-image icons-terms">{{ 'read the terms'|trans }}</a>
                                </td> #}

                                <td class="text-center">
                                    <a href="#">
                                    <span></span><i class="fa-solid fa-circle-exclamation icons-terms"></i>{{ 'read the terms'|trans }}</a>
                                </td>
                            </tr>
                        </thead>
                    </table>
                    <div class="text-center">
                        <button type="submit" class="btn btn-success">{{'Register'|trans}}</button>
                    </div> 
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
