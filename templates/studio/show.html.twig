{% extends 'layout.html.twig' %}

{% block title %}Studio{% endblock %}

{% block body %}
    <h1>Studio</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ studio.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ studio.title }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ studio.text }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_studio_index') }}">{{ 'back to list'|trans }}</a>
    <a href="{{ path('app_studio_edit', {'id': studio.id}) }}">{{'Edit'|trans}}</a>
    {% if is_granted('ROLE_SUPER_ADMIN') %}
    {{ include('studio/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
