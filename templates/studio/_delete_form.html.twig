<form method="post" action="{{ path('app_studio_delete', {'id': studio.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ studio.id) }}">
    <button class="btn btn-danger">{{ 'Delete'|trans }}</button>
</form>
