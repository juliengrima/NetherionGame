{% extends 'base.html.twig' %}

{% block title %}Studio index{% endblock %}

{% block body %}
    <h1>Studio index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Text</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for studio in studios %}
            <tr>
                <td>{{ studio.id }}</td>
                <td>{{ studio.title }}</td>
                <td>{{ studio.text }}</td>
                <td>
                    <a href="{{ path('app_studio_show', {'id': studio.id}) }}">show</a>
                    <a href="{{ path('app_studio_edit', {'id': studio.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_studio_new') }}">Create new</a>
{% endblock %}
