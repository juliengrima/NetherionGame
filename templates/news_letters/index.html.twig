{% extends 'base.html.twig' %}

{% block title %}NewsLetters index{% endblock %}

{% block body %}
    <h1>NewsLetters index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for news_letter in news_letters %}
            <tr>
                <td>{{ news_letter.id }}</td>
                <td>{{ news_letter.email }}</td>
                <td>
                    <a href="{{ path('app_news_letters_show', {'id': news_letter.id}) }}">show</a>
                    <a href="{{ path('app_news_letters_edit', {'id': news_letter.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_news_letters_new') }}">Create new</a>
{% endblock %}
